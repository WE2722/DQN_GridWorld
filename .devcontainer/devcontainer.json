{
  "name": "DQN GridWorld",
  "image": "mcr.microsoft.com/devcontainers/python:3.11",
  
  "postCreateCommand": "pip install -r requirements.txt && echo 'âœ… Dependencies installed! Run: streamlit run app.py'",
  
  "forwardPorts": [8501],
  
  "portsAttributes": {
    "8501": {
      "label": "Streamlit App",
      "onAutoForward": "openBrowser"
    }
  },
  
  "customizations": {
    "vscode": {
      "extensions": [
        "ms-python.python",
        "ms-python.vscode-pylance"
      ],
      "settings": {
        "python.defaultInterpreterPath": "/usr/local/bin/python",
        "terminal.integrated.shell.linux": "/bin/bash"
      }
    }
  },
  
  "features": {
    "ghcr.io/devcontainers/features/common-utils:2": {
      "installZsh": false,
      "installOhMyZsh": false
    }
  }
}
